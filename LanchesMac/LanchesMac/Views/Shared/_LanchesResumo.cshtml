@model Lanche

<div class="card col-3" style="margin:8px;">
    <p class="text-center"><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <div class="card-body">
        <p>Preço: @Model.Preco.ToString("c")</p>
        <h4>

            <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
        </h4>


        <p>@Model.DescricaoCurta</p>

        <div>
            <p class="button">
                <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                   asp-action="AdicionarItemCarrinhoCompra" asp-route-LancheId="@Model.LancheId">
                    Incluir no Carrinho
                </a>
            </p>
        </div>
    </div>
</div>